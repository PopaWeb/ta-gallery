{
  "gulp": {
    "tailwind": {
      "config": "./tailwind.config.js"
    },
    "purge": {
      "content": ["./public/**/*.html", "./public/index.html"],
      "whitelist": [
        "nav-item",
        "text-headline",
        "mx-2",
        "token",
        "fade-in",
        "gallery-in",
        "gallery-out",
        "gallery-hidden",
        "onsite-link",
        "bulp",
        "strong",
        "sm:w-1/6"
      ]
    },
    "alpinejs": {
      "base": "./node_modules/alpinejs/dist",
      "source": "./node_modules/alpinejs/dist/*.js",
      "distribution": "./dist/js",
      "destination": "./public/assets/js"
    },
    "styles": {
      "base": "./src/styles",
      "source": "./src/styles/*.css",
      "distribution": "./dist/css",
      "destination": "./public/assets/css"
    },
    "scripts": {
      "base": "./src/scripts",
      "source": "./src/scripts/*.js",
      "distribution": "./dist/js",
      "destination": "./public/assets/js"
    },
    "source_mapping_base_url": "/assets"
  }
}
